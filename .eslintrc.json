{
  "extends": [
    "next/core-web-vitals",
    "plugin:readable-tailwind/warning"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest"
  },
  "plugins": [
    "readable-tailwind"
  ],
  "rules": {
    "readable-tailwind/multiline": [
      "warn",
      {
        "classesPerLine": 1,
        "group": "emptyLine"
      }
    ]
  }
}